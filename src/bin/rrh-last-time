#!/bin/sh
set -o errexit
set -o nounset
set -o pipefail
RRH_VER="source"
RRH_BIN="."
RRH_VAR="$HOME/.cache/rrh-dev/var"
RRH_ETC="$HOME/.cache/rrh-dev/etc"

help() {
    echo "Usage: rrh-last-time [-h]"
    echo "Print the the time of the last update."
    echo ""
    echo "  -h    Human-readable time format"
    echo ""
    echo "RRH $RRH_VER"
    exit 8
}


if [ "$#" -gt 1 ]; then
    help
fi

if [ "$#" -eq 0 ]; then
    ARG1=""
else
    ARG1="$1"
fi

if [ -f "$RRH_VAR/last_time" ]; then
    DifferenceInS="$(expr $(date -u +%s) - $(cat $RRH_VAR/last_time))"
else
    DifferenceInS="$(date -u +%s)"
fi

if [ "$ARG1" == "-h" ]; then
    T=$DifferenceInS
    D=$((T/60/60/24))
    H=$((T/60/60%24))
    M=$((T/60%60))
    S=$((T%60))
    (( $D > 0 )) && printf '%d day(s) ' $D
    (( $H > 0 )) && printf '%d hour(s) ' $H
    (( $M > 0 )) && printf '%d minute(s) ' $M
    (( $D > 0 || $H > 0 || $M > 0 )) && printf 'and '
    printf '%d second(s)\n' $S
else
    if [ -z "$ARG1" ]; then
        echo $DifferenceInS
    else
        help
    fi
fi
