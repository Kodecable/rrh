#!/bin/sh
set -o errexit
set -o nounset
set -o pipefail
RRH_VER="source"
RRH_BIN="."
RRH_VAR="$HOME/.cache/rrh-dev/var"
RRH_ETC="$HOME/.cache/rrh-dev/etc"

if [ ! "$#" -eq 0 ]; then
    echo "Usage: rrh-list-action"
    echo "List actions."
    echo "RRH $RRH_VER"
    exit 8
fi

if [ ! -f "$RRH_VAR/last" ]; then
    echo " - empty - "
    exit 0
fi

echo "Last update time: $($RRH_BIN/rrh-last-time -h) ago"
echo "Last update id:   $(cat $RRH_VAR/last)"

echo "Action ID      Exit Code"
ls -1 "$RRH_VAR/action" |
while IFS= read -r line; do
    echo "$line $(cat $RRH_VAR/action/$line/exit_code)"
done

