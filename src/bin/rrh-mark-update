#!/bin/sh
set -o nounset
set -o pipefail
RRH_VER="source"
RRH_BIN="."
RRH_VAR="$HOME/.cache/rrh-dev/var"
RRH_ETC="$HOME/.cache/rrh-dev/etc"

if [ ! "$#" -eq 0 ]; then
    echo "Usage: rrh-mark-update"
    echo "Mark once update. May require root."
    echo "RRH $RRH_VER"
    exit 8
fi

if [ "$(id -un)" != "root" ]; then
        if [ -f "$RRH_ETC/auto_sudo" ]; then
                "$RRH_BIN/rrh-doas" "root" "$0" "$@"
                exit $?
        else
                echo "You may need run this command as root"
        fi
fi

echo "$(date -u +'%s')" >"$RRH_VAR/last_time"
if [ ! $? -eq 0 ]; then
    echo "write last update time failed!" >&2
    exit 7
fi
exit 0
