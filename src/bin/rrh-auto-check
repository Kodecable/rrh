#!/bin/sh
set -o nounset
set -o pipefail
RRH_VER="source"
RRH_BIN="."
RRH_VAR="$HOME/.cache/rrh-dev/var"
RRH_ETC="$HOME/.cache/rrh-dev/etc"

help() {
    echo "Usage: rrh-auto-check [OUTDATE_TIME]"
    echo "Execute custom script when system outdated."
    echo ""
    echo "  OUTDATE_TIME    see 'rrh-is-outdated --help'"
    echo ""
    echo "RRH $RRH_VER"
    exit 8
}

if [ $# -gt 1 ]; then
    help
fi

if [ $# -eq 1 ]; then 
    if [ "$1" == "-h" ] || [ "$1" == "--help" ] ||
        [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
        help
    fi
    "$RRH_BIN/rrh-is-outdated" "$1"
    RESULT=$?
else
    "$RRH_BIN/rrh-is-outdated"
    RESULT=$?
fi

if [ $RESULT -eq 0 ]; then
    "$RRH_ETC/cmd/auto_check_outdated"
fi
