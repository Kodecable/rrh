#!/bin/sh
set -o errexit
set -o nounset
set -o pipefail
RRH_VER="source"
RRH_BIN="."
RRH_VAR="$HOME/.cache/rrh-dev/var"
RRH_ETC="$HOME/.cache/rrh-dev/etc"

help() {
    echo "Usage: rrh-is-outdated [OUTDATE_TIME]"
    echo "Test whether the system has outdated."
    echo ""
    echo "  OUTDATE_TIME    Outdate time in second(s)"
    echo ""
    echo "OUTDATE_TIME priority: argument > $RRH_ETC/outdate_time > '7 days'"
    echo "If it is more than 'OUTDATE_TIME' since the last update,"
    echo "exit with 0, otherwise exit with non-0."
    echo "RRH $RRH_VER"
    exit 8
}

if [ "$#" -gt 1 ]; then
    help
fi

if [ -f "$RRH_ETC/outdate_time" ]; then
    OUTDATE_TIME="$(cat $RRH_ETC/outdate_time)"
else
    OUTDATE_TIME=604800 # 7 days
fi

if [ ! $# -eq 0 ]; then 
    if [ "$1" == "-h" ] || [ "$1" == "--help" ] ||
        [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
        help
    else
        OUTDATE_TIME="$1"
    fi
fi

LAST_TIME="$($RRH_BIN/rrh-last-time)"

if [ "$LAST_TIME" -gt "$OUTDATE_TIME" ]; then
    exit 0
else
    exit 1
fi